<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="thomas.darimont@identity-tailor.de" id="ssf-1.0.0">

        <createTable tableName="SECURITY_EVENT_ENTITY">

            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="RECEIVER_ALIAS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="CREATED_TIMESTAMP" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="ACK_TIMESTAMP" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="SECURITY_EVENT_JSON" type="text">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addPrimaryKey
                constraintName="PK_SECURITY_EVENT_ENTITY"
                tableName="SECURITY_EVENT_ENTITY"
                columnNames="REALM_ID, ID"
        />

    </changeSet>

</databaseChangeLog>
